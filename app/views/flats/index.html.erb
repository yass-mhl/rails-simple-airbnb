  <div class="container col-12">
    <p><%= link_to "Rails BnB", flats_path, class: 'p-3 mb-2 bg-success text-white' %></p>
    <p><%= link_to "Add flat", new_flat_path, class: 'p-1 mb-2 bg-info text-white' %></p>
  </div>
  <form class="form-inline my-2 my-lg-0">
            <input class="form-control mr-sm-2" name="query" type="search" placeholder="Search" aria-label="Search" value="<%= params[:query] %>">
            <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
  c</form>
</div>
<div class="d-flex justify-content-around flex-column">
  <ul class="list-group list-group-horizontal">

    <% @flats.each do |flat| %>
      <li class="list-group-item m-2 flex-wrap">
        <div class="flat">
          <img src="<%= flat.picture_url %>" alt="flat img">
          <h3><%= flat.name %></h3>
          <p><%= flat.description %></p>
          <p>ðŸ‘¤<%= flat.number_of_guests %> ðŸ’²<%= flat.price_per_night %></p>
        </div>
        <div class="links d-flex justify-content-around">
          <%= link_to "More info", flat_path(flat), class: 'text-primary'%>
          <%= link_to "Edit", edit_flat_path(flat), class: 'text-warning' %>
